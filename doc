4.3 Logging AOP (non-intrusif)
// AVANT : Code polluÃ© par le logging
public TransferResult executeTransfer(TransferRequest request) {
    String operationId = UUID.randomUUID().toString();
    MDC.put("operation", "SEPA_TRANSFER");
    MDC.put("operation_id", operationId);
    long startTime = System.nanoTime();
    
    try {
        log.info("ENTRY: operation=SEPA_TRANSFER, params={}", maskParams(request));
        
        // Code mÃ©tier
        TransferResult result = doTransfer(request);
        
        long duration = (System.nanoTime() - startTime) / 1_000_000;
        log.info("EXIT: operation=SEPA_TRANSFER, duration={}ms", duration);
        auditLog.info("AUDIT: operation=SEPA_TRANSFER, status=SUCCESS");
        
        return result;
    } catch (Exception e) {
        log.error("ERROR: operation=SEPA_TRANSFER", e);
        auditLog.info("AUDIT: operation=SEPA_TRANSFER, status=FAILURE");
        throw e;
    } finally {
        MDC.remove("operation");
        MDC.remove("operation_id");
    }
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

// APRÃˆS : Code propre avec @PaymentLog
@PaymentLog(operation = "SEPA_TRANSFER", auditEnabled = true)
public TransferResult executeTransfer(TransferRequest request) {
    // Uniquement le code mÃ©tier !
    return doTransfer(request);
}
